<h2>Sign up</h2>

<div class="row">
  <div class="col s12 m6 offset-m3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate" %>
        <%= f.label :email %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, autocomplete: "new-password", class: "validate" %>
        <%= f.label :password %>
      </div>

      <div class="input-field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "validate" %>
        <%= f.label :password_confirmation %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn waves-effect waves-light" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
